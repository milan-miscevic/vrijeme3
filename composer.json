{
    "name": "milan-miscevic/vrijeme3",
    "description": "A planned collector of weather data",
    "type": "project",
    "keywords": [
        "inert",
        "weather-data",
        "example-project",
        "weather",
        "skeleton-application"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Milan Miščević",
            "email": "milan.miscevic@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "milan-miscevic/inert": "^0.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Vrijeme3\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vrijeme3Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "coverage": "phpunit --coverage-text",
        "fix": "php-cs-fixer fix",
        "stan": "phpstan analyse",
        "test": "phpunit"
    }
}
